<span class="n">partition</span><span class="o">(</span><span class="n">newSize</span><span class="o">,</span> <span class="n">x</span> <span class="o">+</span> <span class="n">newSize</span><span class="o">,</span> <span class="n">y</span> <span class="o">+</span> <span class="n">newSize</span><span class="o">);</span>
